CC = gcc
SRC = main.c holberton.c
NAME = holberton
OBJ = $(SRC:.c=.o)
RM = rm -f

.PHONY : re all clean oclean fclean

all : $(OBJ) m.h 
	$(CC) $(OBJ) -o $(NAME)
clean :
	$(RM) $(wildcard *~) $(wildcard .swp) $(NAME)
oclean :
	$(RM) $(OBJ)
fclean :
	$(RM) $(wildcard *~) $(OBJ) $(NAME)
re : oclean all
main.o : main.c
	gcc -c -o main.o main.c
holberton.o : holberton.c
	gcc -c -o holberton.o holberton.c
